#define WIDTH 800 //test
#define HEIGHT 600 //test

void	hook(void *param)
{
	mlx_t	*mlx = param;
	if (mlx_is_key_down(mlx, MLX_KEY_ESCAPE))
		mlx_close_window(mlx);
}

int	main(void)
{
	mlx_t	*mlx;

	mlx = mlx_init(WIDTH, HEIGHT, "miniRT", true);
	if (!mlx)
		return (EXIT_FAILURE);
	mlx_loop_hook(mlx, &hook, mlx);
	mlx_loop(mlx);
	mlx_terminate(mlx);
	return (EXIT_SUCCESS);
}
--------------------
#include <stdio.h>
#include <math.h>
#include "miniRT.h"

void	test_vec_normalize()
{
	t_vec3	v = {3, 4, 0};
	t_vec3	n = vec_normalize(v);
	float	len = vec_len(n);
	printf("test normalize: len = %.2f (expect 1.00)\n", len);
}

void	test_vec_dot()
{
	t_vec3	a = {1, 0, 0};
	t_vec3	b = {0, 1, 0};
	printf("test dot: %.2f (expect 0.00)\n", vec_dot(a, b));
}

void	test_vec_cross()
{
	t_vec3	a = {1, 0, 0};
	t_vec3	b = {0, 1, 0};
	t_vec3	c = vec_cross(a, b);
	printf("test cross: (%.1f, %.1f, %.1f) (expect 0,0,1)\n", c.x, c.y, c.z);
}

int	main(void)
{
	test_vec_normalize();
	test_vec_dot();
	test_vec_cross();
	return (0);
}
